This is a simple Docker file for Mojolicious app on Scaleway

ssh root@< your scaleway server ip >

git clone https://github.com/loorko/MojoWebAppScaleway
cd MojoWebAppScaleway
docker build -t mojo-web-app .

docker run -p 8080 -t -i --name mojo_web_app mojo-web-app

docker inspect --format '{{ .NetworkSettings.IPAddress }}' mojo_web_app

172.17.0.2:8080

# Configure nginx
unlink /etc/nginx/sites-enabled/default
cp ./overlay/etc/nginx/sites-available/aplication /etc/nginx/sites-available/
ln -s /etc/nginx/sites-available/aplication /etc/nginx/sites-enabled/

mv etc/nginx/sites-available/apllication.conf /etc/nginx/sites-available/apllication.conf

cp -i apllication.conf /etc/nginx/sites-available/

ln -sf /etc/nginx/sites-available/apllication.conf /etc/nginx/sites-enabled/apllication.conf
rm -f /etc/nginx/sites-enabled/default